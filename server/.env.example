# OpenAI API Key - Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sua_openai_api_key_aqui

# Porta do servidor
PORT=5000

# Database - PostgreSQL URL (Supabase, Neon, Railway, etc.)
DATABASE_URL=postgresql://usuario:senha@host:porta/database

# PubMed Email (opcional, mas recomendado)
PUBMED_EMAIL=seu-email@exemplo.com

# Google OAuth - Obtenha em: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=seu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=seu_google_client_secret_aqui
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Session Secret (gere uma chave aleatória forte)
SESSION_SECRET=gere_uma_chave_aleatoria_segura_aqui

# Brevo (Sendinblue) API Key - Obtenha em: https://app.brevo.com/settings/keys/api
# IMPORTANTE: Use a SMTP Key, não a API Key normal
BREVO_API_KEY=sua_brevo_smtp_key_aqui
