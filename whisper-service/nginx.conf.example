# Configuração Nginx para CinthiaMed Voice Service
# Copie este arquivo para: /etc/nginx/sites-available/cinthiamed-voice
# Execute: sudo ln -s /etc/nginx/sites-available/cinthiamed-voice /etc/nginx/sites-enabled/

# Limite de taxa (rate limiting) para prevenir abuso
limit_req_zone $binary_remote_addr zone=voice_limit:10m rate=10r/m;

# Configuração HTTP (será redirecionado para HTTPS após certificado SSL)
server {
    listen 80;
    listen [::]:80;

    # Altere para seu domínio ou IP
    server_name voice.cinthiamed.com.br;
    # ou use o IP da VPS:
    # server_name 123.456.789.012;

    # Limite de tamanho de upload (25MB para áudio)
    client_max_body_size 25M;

    # Logs
    access_log /var/log/nginx/cinthiamed-voice-access.log;
    error_log /var/log/nginx/cinthiamed-voice-error.log;

    # Headers de segurança
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Proxy para o serviço Python
    location / {
        # Aplicar rate limiting
        limit_req zone=voice_limit burst=5 nodelay;

        # Proxy pass para o serviço local
        proxy_pass http://127.0.0.1:8000;

        # Headers necessários
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;

        # IP real do cliente
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Timeouts aumentados para processar áudio
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;

        # Sem buffering para streaming
        proxy_buffering off;
    }

    # Health check endpoint (sem rate limit)
    location /health {
        proxy_pass http://127.0.0.1:8000/health;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        access_log off;  # Não logar health checks
    }

    # Bloquear acesso direto a arquivos sensíveis (se houver)
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

